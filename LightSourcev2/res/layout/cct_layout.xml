<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/cct_layout" 
	android:padding="10dp"
	android:gravity="center_horizontal"
    xmlns:app="http://schemas.android.com/apk/res/cat.irec.lightsource">
    
	<cat.irec.lightsource.CircularSeekBar 
		android:id="@+id/circularseekbar"
 		app:pointer_radius = "10"
	    app:start_angle="90"
	    app:end_angle="360"
	    app:use_custom_radii="true"
	    app:circle_x_radius="100"
	    app:circle_y_radius="100"
		android:layout_marginTop="10dp"
	    android:layout_width="wrap_content" 
	    android:layout_height="wrap_content"/>
	
	<TextView
		android:id="@+id/intensityText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/TextoAsteroides"/>
	
	<SeekBar
	    android:progress="100"
        android:id="@+id/intensity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
<!--  
	<TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/saturacion"
        style="@style/TextoAsteroides"/>
	
	<SeekBar
        android:id="@+id/saturation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
		-->	
    <Button
        android:id="@+id/savebutton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/TextoAsteroides.Botones"        
        android:text="@string/save" />	
</LinearLayout>
